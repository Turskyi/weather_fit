<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidDomInspection -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- A TextView for the emoji with top padding. -->
    <TextView
        android:id="@+id/text_emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textSize="64sp" />

    <!-- A TextView for the location. -->
    <TextView
        android:id="@+id/text_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="24sp" />

    <!-- A TextView for the temperature. -->
    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp" />

    <!-- A TextView for the outfit recommendation. -->
    <TextView
        android:id="@+id/text_outfit_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Recommended Outfit: Casual Jacket and Jeans" />

    <!-- A TextView for the last updated time. -->
    <TextView
        android:id="@+id/text_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="14sp" />

    <!-- Container for the forecast items -->
    <LinearLayout
        android:id="@+id/forecast_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Morning Forecast -->
        <LinearLayout
            android:id="@+id/forecast_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast_morning_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Today" />

            <TextView
                android:id="@+id/forecast_morning_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Morning" />

            <TextView
                android:id="@+id/forecast_morning_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="â˜ï¸" />

            <TextView
                android:id="@+id/forecast_morning_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="10Â°" />
        </LinearLayout>

        <!-- Lunch Forecast -->
        <LinearLayout
            android:id="@+id/forecast_lunch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast_lunch_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Today" />

            <TextView
                android:id="@+id/forecast_lunch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Lunch" />

            <TextView
                android:id="@+id/forecast_lunch_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="â˜€ï¸" />

            <TextView
                android:id="@+id/forecast_lunch_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="15Â°" />
        </LinearLayout>

        <!-- Evening Forecast -->
        <LinearLayout
            android:id="@+id/forecast_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast_evening_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Today" />

            <TextView
                android:id="@+id/forecast_evening_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Evening" />

            <TextView
                android:id="@+id/forecast_evening_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="ðŸŒ™" />

            <TextView
                android:id="@+id/forecast_evening_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="8Â°" />
        </LinearLayout>

    </LinearLayout>

    <!-- An ImageView for the outfit image. -->
    <!--suppress AndroidUnknownAttribute -->
    <ImageView
        android:id="@+id/image_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_corner_image"
        android:clipToOutline="true"
        android:contentDescription="@string/outfit_image"
        android:gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_round"
        android:visibility="visible"
        tools:visibility="visible" />

</LinearLayout>
